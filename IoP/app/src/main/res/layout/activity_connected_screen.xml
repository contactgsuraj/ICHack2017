<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.ajkndroid.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/Connection"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/connected"
        android:textColor="#ffffff"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/inquire"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/inquire"
        android:textColor="#ffffff"
        android:paddingBottom="200sp"
        android:textSize="28sp" />

    <Button
        android:paddingTop="10sp"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-light"
        android:onClick="method1"
        android:text="watch me"
        android:padding="25sp"
        android:layout_height="wrap_content" />

    <Button
        android:paddingTop="10sp"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-light"
        android:padding="25sp"
        android:onClick="method2"
        android:text="Alarm "
        android:layout_height="wrap_content" />

    <Button
        android:paddingTop="10sp"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-light"
        android:padding="25sp"
        android:onClick="method3"
        android:text="etc"
        android:layout_height="wrap_content" />

    <Button
        android:paddingTop="10sp"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-light"
        android:padding="25sp"
        android:text="etc"
        android:onClick="method4"
        android:layout_height="wrap_content" />
</LinearLayout>


